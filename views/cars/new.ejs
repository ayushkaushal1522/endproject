<% layout('layouts/boilerplate') %>


<div class="row">
    <div class="col-6 mx-auto">
        <form action="/cars" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="company" class="form-label">Company Name: </label>
                <input type="text" class="form-control" name="company" id="company" placeholder="Company Name" required>
                
            </div>
            <div class="mb-3">
                <label for="model" class="form-label">Car Model </label>
                <input type="text" class="form-control" name="model" id="model" placeholder="Model of the Car" required>
                
            </div>
            <div class="mb-3">
                <label for="year" class="form-label">Year: </label>
                <input type="text" class="form-control" name="year" id="year" placeholder="Year of launch" required>
            </div>
            
            <div class="mb-3">
                <label for="mileage" class="form-label">Mileage : </label>
                <input type="text" class="form-control" name="mileage" id="mileage" placeholder="Mileage of the car" required>
                
            </div>
        
            
            <button type="submit" class="btn btn-sm btn-success">Add</button>
        </form>
    </div>
</div>